<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
<br>
<div class= "columns is-centered">
  <h1 class = "has-text-link is-size-3">Presentations</h1>
</div>
<div class= "columns is-centered">
  <div id="presentations">
   <% @presentations.each do |presentation| %>
     <%= render presentation %>
      <h2 class= "is-size-4 px-6"><%= link_to "Show this presentation", presentation, class: "button is-light is-link is-small" %></h2>
   <% end %>
  </div>
</div>

<div class= "columns is-centered">
 <h2 class= "is-size-4"> <% if can? :index, @presentation%> <%=link_to "New presentation", new_presentation_path, class: "button is-light is-link is-small"%><% end %> </h2>
</div>


